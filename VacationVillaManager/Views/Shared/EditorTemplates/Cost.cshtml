@model VacationVillaManager.Models.Cost

@Html.HiddenFor(model => model.ID, new { @class = "costID" })

<div class="input-prepend input-append">
    <span class="add-on"><i class="icon-tag"></i></span>
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", @class = "input-sm costName" })
    <span class="add-on"><i class="icon-usd"></i></span>
    @Html.TextBoxFor(model => model.Amount, new { placeholder = "Amount", @class = "input-mini costAmount" })
    <span class="add-on"><a href="javascript:void(0)" class="deleteRow"> <i class="icon-remove-sign icon-large"></i></a></span>
</div>
