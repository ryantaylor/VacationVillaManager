@model VacationVillaManager.Models.Booking

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <legend>Booking</legend>

        <h2>Client Info</h2>

        <table>
            <tr>
                <td>@Html.RadioButton("clientSelect", 0, true, new { id = "radioReturnClient" }) Returning Client</td>
                <td>@Html.DropDownList("clientList", (IEnumerable<SelectListItem>)ViewData["ClientsList"], new { id = "clientList" })</td>
            </tr>
            <tr>
                <td>@Html.RadioButton("clientSelect", 1, false, new { id = "radioNewClient" }) New Client</td>
            </tr>
        </table>

        <div class="clientInfo">
            <!-- Generated client editor goes here -->
        </div>

        <h2>Booking Info</h2>

        <table>
            @Html.HiddenFor(model => model.House.Location)
            <tr>
                <td>@Html.LabelFor(model => model.House)</td>
                <!--<td>@Html.DropDownList("housesList", (IEnumerable<SelectListItem>)ViewData["HousesList"], new { id = "housesList" })</td>-->
                <td>@Html.DropDownListFor(model => model.House.ID, (IEnumerable<SelectListItem>)ViewData["HousesList"], new { id = "housesList" })</td>
                <td>@Html.ValidationMessageFor(model => model.House.ID)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.StartDate)</td>
                <td>@Html.EditorFor(model => model.StartDate)</td>
                <td>@Html.ValidationMessageFor(model => model.StartDate)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.EndDate)</td>
                <td>@Html.EditorFor(model => model.EndDate)</td>
                <td>@Html.ValidationMessageFor(model => model.EndDate)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.NumAdults)</td>
                <td>@Html.EditorFor(model => model.NumAdults)</td>
                <td>@Html.ValidationMessageFor(model => model.NumAdults)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.NumChildren)</td>
                <td>@Html.EditorFor(model => model.NumChildren)</td>
                <td>@Html.ValidationMessageFor(model => model.NumChildren)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Rate)</td>
                <td>@Html.TextBoxFor(model => model.Rate, new { id = "rateBox" })</td>
                <td>@Html.ValidationMessageFor(model => model.Rate)</td>
            </tr>
        </table>

        <div class="editor-label">
            @Html.LabelFor(model => model.Costs)
        </div>

        <div class="costEditor">
            <!-- Generated cost editors go here -->
        </div>

        <a href="javascript:void()" class="addNewCost" >Add</a>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

