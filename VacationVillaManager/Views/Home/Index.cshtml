@{
    ViewBag.Title = "Vacation Villa Manager";
    Layout = "~/Views/Shared/_BootstrapLayout.public.cshtml";
    var firstImg = true;
    var imgClass = "item";
}

<link href="@Styles.Url("~/Content/unity/plugins/parallax-slider/css/parallax-slider.css")" rel="stylesheet" />

<!--=== Slider ===-->
<div class="slider-inner">
    <div id="da-slider" class="da-slider">
        <div class="da-slide">
            <h2><i>VACATION DREAMS</i> <br /> <i>DO COME TRUE</i></h2>
            <p><i>Start with choosing</i> <br /> <i>one of our vacation villas!!</i></p>
            <div class="da-img"><img src="/Images/slider/scroll1-border.jpg" alt="" /></div>
        </div>
        <div class="da-slide">
            <h2><i>EXPLORE ORLANDO</i> <br /> <i>AND BECOME THE ADVENTURE</i></h2>
            <p><i>Our villas are located</i> <br /> <i>near all major attractions!!</i></p>
            <div class="da-img"><img src="/Images/slider/scroll2.png" alt="" /></div>
        </div>
        <div class="da-slide">
            <h2><i>COOL OFF, HAVE FUN,</i> <br /> <i>SOAK UP THE SUN</i></h2>
            <p><i>We have large private</i> <br /> <i>heated pools and spas!!</i></p>
            <div class="da-img"><img src="/Images/slider/scroll3-border.jpg" alt="" /></div>
        </div>
        <div class="da-slide">
            <h2><i>RETIRE TO THE COMFORT</i> <br /> <i>OF A SPACIOUS VILLA</i></h2>
            <p><i>Big or small, we have</i> <br /> <i>the perfect villa for you!!</i></p>
            <div class="da-img"><img src="/Images/slider/scroll4-border.jpg" alt="" /></div>
        </div>
        <nav class="da-arrows">
            <span class="da-arrows-prev"></span>
            <span class="da-arrows-next"></span>		
        </nav>
    </div><!--/da-slider-->
</div><!--/slider-->
<!--=== End Slider ===-->

<!-- Booking Block -->
<div class="row-fluid purchase margin-bottom-30">
    <div class="container">
		<div class="span9">
            <span>Vacation Villa Manager is your vacation home destination!</span>
            <p>Whether you're looking for a relaxing getaway or an exciting retreat with the family, Vacation Villa Manager has a Villa available to suit your every need! Conveniently located near Orlando's many attractions, these Villas are sure to impress!</p>
        </div>
        <div class="span2">
            <a href="@Url.Action("Availability", "Houses")" class="btn-buy hover-effect">Find a Villa</a>
        </div>
    </div>
</div>
<!-- End Booking Block -->

<!-- Content Block -->
<div class="container">
    <!-- Service Blocks -->
	<div class="row-fluid">
    	<div class="span4">
            <div class="headline"><h3>Information</h3></div>
    		<div id="weather" class="service clearfix">
                <!-- Weather feed goes here -->
    		</div>	
            <div class="service clearfix">
                <i class="icon-home"></i>
                <div class="desc">
    				<h4>Looking for a <br />Vacation Villa?</h4>
                    <p>Vacation Villa Manager is a great place to book a vacation rental villa. If you need rental assistance, <a href="@Url.Action("Services", "Home")" style="color: #72C02C;">we can help!</a> Vacation Villa Manager is always looking for new Villas to list! If you're looking for help renting out your vacation home, head over to the Contact page and send us a message!</p>
    			</div>
    		</div>	
    	</div>
    	<div class="span8">
            <div class="headline"><h3>Our Villas</h3></div>
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">

                @foreach (var photo in ViewBag.Headlines)
                {
                    if (firstImg)
                    {
                        firstImg = false;
                        imgClass = "item active";
                    }

                    else
                    {
                        imgClass = "item";
                    }

                    <div class="@imgClass">
                        <img src="/Images/houses/@photo.URL" alt="@photo.Name" />
                        <div class="carousel-caption">
                            <h4>@photo.House.Name</h4>
                        </div>
                    </div>
                }
                </div>
                <div class="carousel-arrow">
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="icon-angle-left"></i></a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="icon-angle-right"></i></a>
                </div>
			</div>
    	</div>			    
	</div>
	<!-- //End Service Blocks -->
</div>

@section Scripts {
    @Styles.Render("~/Scripts/weatherfeed/example.css")
    @Scripts.Render("~/Content/unity/plugins/parallax-slider/js/modernizr.js")
    @Scripts.Render("~/Content/unity/plugins/parallax-slider/js/jquery.cslider.js")
    @Scripts.Render("~/Scripts/weatherfeed/jquery.zweatherfeed.js")
    <script type="text/javascript">
        $(document).ready(function () {

            $('#da-slider').cslider();

            $('.carousel').carousel({
                interval: 15000,
                pause: 'hover'
            });

            $('#weather').weatherfeed(['USFL0372'], {
                
            });
        });
    </script>
}