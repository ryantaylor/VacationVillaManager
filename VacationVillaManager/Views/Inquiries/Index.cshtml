@model IEnumerable<VacationVillaManager.Models.Inquiry>

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid">
    <div class="span6">
        <h3 class="pendingHead">Pending <small>Inquiries</small></h3>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House)
            </th>
            <th>
                Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "Pending")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.House.Name)
                    </td>
                    <td>
                        @item.StartDate.ToString("dd MMM yyyy") - @item.EndDate.ToString("dd MMM yyyy")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="row-fluid">
    <div class="span6">
        <h3 class="resolvedHead">Resolved <small>Inquiries</small></h3>
    </div>
</div>

<table class="table table-hover" id="table-resolved">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House)
            </th>
            <th>
                Duration
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "Resolved")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.House.Name)
                    </td>
                    <td>
                        @item.StartDate.ToString("dd MMM yyyy") - @item.EndDate.ToString("dd MMM yyyy")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            var expanded = false;

            $('#resolved-expand').click(function () {
                if (expanded == false) {
                    $(this).find('i').attr('class', 'icon-minus-sign-alt');
                    $('#table-resolved').slideDown();
                    expanded = true;
                }
                else {
                    $(this).find('i').attr('class', 'icon-plus-sign-alt');
                    $('#table-resolved').slideUp();
                    expanded = false;
                }
            });
        });
    </script>
}
