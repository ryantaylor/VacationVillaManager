@model List<House>
@using VacationVillaManager.Models;

@if (Model.Count == 0)
{
    <p><em>There are no villas available over those dates! Try another set of dates or check the individual villa pages for up-to-date availability information.</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 0;"></th>
                <th class="pull-left">Villa</th>
                <th>Rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (House house in Model)
            {
                <tr>
                    <td style="text-align: center;"><img src="/Images/houses/@house.Photos[0].URLThumbWide" /></td>
                    <td style="vertical-align: middle;"><h3>@house.Name</h3></td>
                    <td style="vertical-align: middle;"><h3>$@house.Rate</h3></td>
                    <td style="vertical-align: middle; text-align: center;">@Html.ActionLink("View/Reserve Villa", "Details", "Houses", new { id = house.ID }, new { @class = "btn-reserve hover-effect" })</td>
                </tr>
            }
        </tbody>
    </table>   
}